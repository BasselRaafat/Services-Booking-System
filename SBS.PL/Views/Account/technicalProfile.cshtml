@model ProviderPortfolioViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Left side: Provider Portfolio Information -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <!-- Profile picture -->
                    <img src="@Model.ProviderImageUrl" class="rounded-circle mb-3" width="150" alt="Profile Image">

                    <!-- Provider Name and Rating -->
                    <h4>
                        <span class="provider-name-text">@Model.ProviderName</span>
                        <button class="btn btn-link p-0" title="Edit" onclick="toggleEdit('provider-name')">
                            <i class="bi bi-pen-fill"></i>
                        </button>
                        <div class="d-none provider-name-input">
                            @using (Html.BeginForm("EditName", "Account", FormMethod.Post))
                            {
                                <input type="text" class="form-control " value="@Model.ProviderName" />
                                <button type="submit" class="btn btn-primary mt-2 w-100">save</button>
                            }
                        </div>

                    </h4>

                    <p class="text-muted">
                        Rating: <span class="provider-rating-text">@Model.ProviderRating</span> ★
                        
                    </p>

                    <p>
                        <span class="total-reviews-text">@Model.TotalReviews</span> reviews |
                        <span class="total-tasks-text">@Model.TotalTasksCompleted</span> tasks completed
                        
                    </p>

                    <hr>

                    <!-- About me section -->
                    <h6>
                        About Me
                        <button class="btn btn-link p-0" title="Edit" onclick="toggleEdit('provider-bio')">
                            <i class="bi bi-pen-fill"></i>
                        </button>
                    </h6>
                    <p class="provider-bio-text">@Model.ProviderBio</p>
                    <div class="d-none provider-bio-input">
                        @using (Html.BeginForm("EditBio", "Account", FormMethod.Post))
                        {
                            <textarea class="form-control ">@Model.ProviderBio</textarea>
                            <button type="submit" class="btn btn-primary mt-2 w-100">save</button>
                        }
                    </div>
                    
                    <hr>

                    <!-- Skills/Services offered -->
                    <h6>
                        Services
                        <button class="btn btn-link p-0" title="Edit" onclick="toggleEdit('skills')">
                            <i class="bi bi-pen-fill"></i>
                        </button>
                    </h6>
                    <ul class="list-group skills-text">
                        @foreach (var skill in Model.Skills)
                        {
                            <li class="list-group-item">@skill </li> 
                        }
                    </ul>
                    <div class="d-none skills-input">
                        
                            @foreach (var skill in Model.Skills)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center mt-2">
                                    @skill
                                    <!-- Delete Skill Button -->
                                    @using (Html.BeginForm("DeleteService", "Account", FormMethod.Post))
                                    {
                                        @Html.Hidden("skillToDelete", skill)
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    }
                                </li>
                            }

                        <h6 class="mt-3">Add New Service</h6>
                        @using (Html.BeginForm("AddService", "Account", FormMethod.Post))
                        {
                            <div class="row">
                                <!-- Service Name Input -->
                                <div class="col-12 mb-3">
                                    <input type="text" name="serviceName" class="form-control" id="serviceName" placeholder="Enter new Service Name" />
                                </div>

                                <!-- Service Description Input -->
                                <div class="col-12 mb-3">
                                    <input type="text" name="serviceDescription" class="form-control" id="serviceDescription" placeholder="Enter Description" />
                                </div>

                                <!-- Category Id Input -->
                                <div class="col-12 mb-3">
                                    <input type="text" name="categoryId" class="form-control" id="categoryId" placeholder="Enter Category Id" />
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-success w-100">Add Service</button>
                                </div>
                            </div>

                            @Html.ValidationMessage("newService", "Account", new { @class = "text-danger" })
                        }
                        
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side: Services Provided -->
        <div class="col-md-8">
            @foreach (var service in Model.Services)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Service Title and Price -->
                        <h5>@service.ServiceName for $@service.ServicePrice</h5>

                        <!-- Service Rating and Reviews -->
                        <p class="text-muted">
                            Rating: @service.ServiceRating ★ (@service.ServiceReviewsCount reviews)
                        </p>

                        <!-- Service Description -->
                        <p>@service.ServiceDescription</p>

                        <hr>

                        <!-- Select and Continue Button -->
                        <button class="btn btn-success">Select & Continue</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Script to handle editing -->
<script>
    function toggleEdit(field) {
        const textElements = document.querySelectorAll(`.${field}-text`);
        const inputElements = document.querySelectorAll(`.${field}-input`);
        const saveButton = document.querySelector('.save-btn');

        // Toggle visibility of text and input elements
        textElements.forEach(el => el.classList.toggle('d-none'));
        inputElements.forEach(el => el.classList.toggle('d-none'));

        // Show the save button when any field is in edit mode
        saveButton.classList.remove('d-none');
    }

</script>

