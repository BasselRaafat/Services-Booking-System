@model ProviderPortfolioViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Left side: Provider Portfolio Information -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <!-- Profile picture -->
                    <img src="@Model.ProviderImageUrl" class="rounded-circle mb-3" width="150" alt="Profile Image">

                    <!-- Provider Name and Rating -->
                    <h4>@Model.ProviderName</h4>
                    <p class="text-muted">Rating: @Model.ProviderRating ★</p>
                    <p>@Model.TotalReviews reviews | @Model.TotalTasksCompleted tasks completed</p>

                    <hr>

                    <!-- About me section -->
                    <h6>About Me</h6>
                    <p>@Model.ProviderBio</p>

                    <hr>

                    <!-- Skills/Services offered -->
                    <h6>Skills</h6>
                    <ul class="list-group">
                        @foreach (var skill in Model.Skills)
                        {
                            <li class="list-group-item">@skill</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right side: Services Provided -->
        <div class="col-md-8">
            @foreach (var service in Model.Services)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Service Title and Price -->
                        <h5>@service.ServiceName for $@service.ServicePrice</h5>

                        <!-- Service Rating and Reviews -->
                        <p class="text-muted">
                            Rating: @service.ServiceRating ★ (@service.ServiceReviewsCount reviews)
                        </p>

                        <!-- Service Description -->
                        <p>@service.ServiceDescription</p>

                        <hr>

                        <!-- Select and Continue Button -->
                        <button class="btn btn-success">Select & Continue</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
