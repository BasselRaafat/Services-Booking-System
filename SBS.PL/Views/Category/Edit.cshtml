@using Services_Booking_System.View_Models
@model CategoryViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" enctype="multipart/form-data">

    <partial name="_CreateEditCategoryPartial"></partial>
    <img src="~/images/@Model.PhotoName" class="mt-4 mb-4 rounded-1" height="300px"  />
    <br />
    <input class="btn btn-primary" type="submit" value="Edit" />
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Category" value="Cancel">Cancel</a>

    </div>
    <div class="form-group" hidden>
        <input class="form-control" asp-for="PhotoName" />
    </div>

    </div>
    <div class="form-group" hidden>
        <input class="form-control" asp-for="CategoryId" />
    </div>
</form>
<partial name="_ValidationScriptsPartial"></partial>


