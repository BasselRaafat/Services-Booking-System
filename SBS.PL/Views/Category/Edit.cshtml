@model Services_Booking_System.View_Models.EditCategoryViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Nested Card for Photo Preview and Upload -->
                <div class="card mb-3">
                    <img src="~/images/@Model.PhotoName" class="card-img-top rounded-1 img-fluid" style="max-height: 300px; object-fit: cover;" alt="Category Image" />
                    <div class="card-body">
                        <div class="form-group mb-0">
                            <label asp-for="Photo" class="form-label fw-bold"></label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Hidden Inputs -->
                <div class="form-group mb-3" hidden>
                    <input asp-for="PhotoName" class="form-control" />
                </div>

                <div class="form-group mb-3" hidden>
                    <input asp-for="CategoryId" class="form-control" />
                </div>

                <div class="d-flex flex-column align-items-center justify-content-center">
                    
                    <input type="submit" value="Save Changes" class="btn btn-primary px-5" />
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary mt-2 px-5">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    form {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        form .form-label {
            font-size: 1rem;
        }

    .btn {
        width: 100%;
        margin-top: 10px;
    }

    img {
        width: 100%;
        height: auto;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 15px;
    }
</style>
