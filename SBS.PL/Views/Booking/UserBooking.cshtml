@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>User Bookings</h1>

<div class="container mt-5">
    <table class="booking-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Total Price</th>
                <th>Technician</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="status-@(booking.Status.ToLower().Split(" ")[0])">@booking.Status</td>
                    <td>$@booking.TotalPrice</td>
                    <td>@booking.Technician.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .booking-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .booking-table th, .booking-table td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: left;
            transition: background-color 0.3s;
        }

        .booking-table th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .booking-table tr {
            transition: background-color 0.3s;
        }

            .booking-table tr:hover {
                background-color: #f5f5f5;
            }

    .status-missed {
        color: red;
        font-weight: bold;
    }

    .status-accepted{
        color: green;
        font-weight: bold;
    }

    .status-pending {
        color: orange; /* Changed to orange for better visibility */
        font-weight: bold;
    }

    /* Button styles */
    .btn {
        text-decoration: none;
        color: white;
        background-color: #007bff;
        padding: 10px 15px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

