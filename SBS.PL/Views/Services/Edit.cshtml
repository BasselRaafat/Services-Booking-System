 @model EditServicesViewModel
@inject ICategoryRepository CategoryRepository
@{
    ViewData["Title"] = "Edit Service";
    var categories = new SelectList(await CategoryRepository.GetAll(), "Id", "Name");
}

<h1 class="text-center my-4">Edit Service</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter service description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Card for Photo Preview and Upload -->
                <div class="card mb-3">
                    <img src="~/images/@Model.PhotoName" class="card-img-top rounded-1 img-fluid" style="max-height: 300px; object-fit: cover;" alt="Service Image" />
                    <div class="card-body">
                        <div class="form-group mb-0">
                            <label asp-for="Photo" class="form-label fw-bold"></label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Hidden Inputs -->
                <input asp-for="Id" hidden />
                <input asp-for="PhotoName" hidden />

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryId" asp-items="categories" class="form-select">
                        <option value="@null">--Select Category--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column align-items-center justify-content-center">
                    <input type="submit" value="Save Changes" class="btn btn-primary px-5" />
                    <a asp-action="Index" asp-route-id="@Model.CategoryId" class="btn btn-secondary mt-2 px-5">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    form {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        form .form-label {
            font-size: 1rem;
        }

    .btn {
        width: 100%;
        margin-top: 10px;
    }

    img {
        width: 100%;
        height: auto;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 15px;
    }
</style>
