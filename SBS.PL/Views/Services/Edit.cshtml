@model ServiceViewModel
@inject ICategoryRepository CategoryRepository
@{
    ViewData["Title"] = "Edit";
    var categories = new SelectList(await CategoryRepository.GetAll(), "Id", "Name");

}

<h1>Edit</h1>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <input asp-for="Photo" type="file" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-select">
            <option value="@null">--Select Category--</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <input asp-for="Id" hidden/>
    <input asp-for="PhotoName" hidden />


    <button type="submit" class="btn btn-primary" value="Edit">Edit</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model.CategoryId">Cancel</a>
</form>
