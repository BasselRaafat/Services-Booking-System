@model IQueryable<Service>
@inject ICategoryRepository _categoryRepo
@{
    ViewData["Title"] = "Index";
    IEnumerable<Service> services = Model; 
    Category category = await _categoryRepo.GetById(ViewBag.CategoryId);

}
<h1>@category.Name</h1>
@foreach (var service in services)
{
    <div class="container mt-4">
        <div class="card mb-3 shadow-sm align-content-between">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/images/@service.PhotoName" class="card-img rounded-3" alt="Door, Cabinet, and Furniture Repair">
                </div>
                <div class="col-md-8 flex ">
                    <div class="card-body">
                        <h4 class="card-title">@service.Name</h4>
                        <p class="card-text">@service.Description</p>
                        <div>
                            <a asp-controller="Service" asp-action="ServiceDetails" asp-route-id="@service.Id" class="btn btn-success">Book Now</a>
                            <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-dark">Edit</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<div>
    <a asp-action="Create" class="btn-primary btn" asp-route-id="@category.Id">Create</a>
</div>

