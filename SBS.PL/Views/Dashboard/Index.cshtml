@model DashboardViewModel
  <!DOCTYPE html>
 <html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Admin</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="#" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />

</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            NiceAdmin
        </div>
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link active" asp-for="">
                    <i class="fas fa-gauge-high"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Admin">
                    <i class="fas fa-user-shield"></i>
                    <span>Admins</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Category">
                    <i class="fas fa-list"></i>
                    <span>Categories</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Services">
                    <i class="fas fa-concierge-bell"></i>
                    <span>Services</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Technicians">
                    <i class="fas fa-user-cog"></i>
                    <span>Technicians</span>
                </a>
            </li>
@*             <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-calendar-check"></i>
                    <span>Bookings</span>
                </a>
            </li> *@
        </ul>
    </aside>

    <!-- Header -->
    <header class="header">
        <nav>
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </header>   


    <!-- Main Content -->
    <main class="main">
        <div class="mb-4">
            <h1 class="page-title">Dashboard</h1>
        </div>

        <!-- Dashboard Cards -->
        <div class="row g-4">
            <!-- Admins Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Admins</h6>
                            <h2 class="card-value">@Model.AdminsCount</h2>
                        </div>
                        <div class="icon" style="background-color: #f6f6fe;">
                            <i class="fas fa-user-shield text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Users</h6>
                            <h2 class="card-value">@Model.UserCount</h2>
                        </div>
                        <div class="icon" style="background-color: #e0f8e9;">
                            <i class="fas fa-users text-success"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technicians Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Technicians</h6>
                            <h2 class="card-value">@Model.TechnicianCount</h2>
                        </div>
                        <div class="icon" style="background-color: #e0f8e9;">
                            <i class="fas fa-user-cog text-success"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bookings Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Booking Number</h6>
                            <h2 class="card-value">@Model.NumberOfBookings</h2>
                        </div>
                        <div class="icon" style="background-color: #ffecdf;">
                            <i class="fas fa-calendar-check text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Categories Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Categories</h6>
                            <h2 class="card-value">@Model.CategoriesCount</h2>
                        </div>
                        <div class="icon" style="background-color: #f6f6fe;">
                            <i class="fas fa-list text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Services Card -->
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Services</h6>
                            <h2 class="card-value">@Model.ServicesCount</h2>
                        </div>
                        <div class="icon" style="background-color: #f6f6fe;">
                            <i class="fas fa-concierge-bell text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
     </body>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
    </html> 